<Window x:Class="PicViewer2._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PicViewer2._0"
        mc:Ignorable="d"
        Title="PicViewer" Height="100" Width="100" WindowStyle="None" AllowsTransparency="True" Initialized="Window_Initialized" MouseRightButtonDown="Window_MouseRightButtonDown" MouseLeftButtonDown="Window_MouseLeftButtonDown" MouseWheel="Window_MouseWheel" KeyDown="Window_KeyDown" ResizeMode="NoResize">
    
    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Duration="00:00:00.200" Storyboard.TargetProperty="Opacity" From="0" To="1"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>
    
    <Canvas x:Name="DrawingCanvas" HorizontalAlignment="Left" Height="0" VerticalAlignment="Top" Width="0" MouseDown="DrawingCanvas_MouseDown" MouseMove="DrawingCanvas_MouseMove"/>
</Window>
